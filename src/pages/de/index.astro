import Oatermix from "../../components/oatermix.astro";
---
<Layout title="THE OATER">
    <Mainhero
        heroImage="/The Oater Barista Maschine.png"
        heroHeading="Haferdrink, frisch gedacht"
        heroSubtitle="Für mehr Impact in deiner Gastro"
        heroText="Biete Deinen Gästen ein frisches Erlebnis – produziere vor Ort nachhaltigen Haferdrink in Barista Qualität. Entdecke, ob the Oater zu Deinem Café passt!"
    >
        <Primary slot="button" buttonName="Zum 1-Minuten Check" buttonUrl="https://share-eu1.hsforms.com/1KM3gGgfeS1mdqBzwXyDhbgfnkng" />
    </Mainhero>
<!-- Start of HubSpot Embed Code -->
<script type="text/javascript" id="hs-script-loader" async defer src="//js-eu1.hs-scripts.com/26294092.js"></script>
<!-- End of HubSpot Embed Code -->
    <ImgText title="Dein Café, Dein Haferdrink" imgUrl="/mission.jpg">
        Entwickelt für die Gastronomie: Mit The Oater Barista® produzierst Du automatisiert Haferdrink frisch vor Ort. Mit unserer einfachen, verpackungsarmen Lösung setzt Du neue Maßstäbe in Sachen Geschmack und Nachhaltigkeit– für Deine Gäste und Dein Team.
        <Secondary slot="button" buttonName="So funktioniert's" buttonUrl="/de/produkt" />
    </ImgText>
   
    <Oatermix
    id="ingredientmixde"
    imgUrl="/zutaten-mix.png"
    title="Mehrwert durch Mehrweg"
    mixpropertiesData={[
        {
            icon: "/biozertifiziert.svg",
            title: "FRISCHE",
            text: "Unser Barista Haferdrink wird frisch vor Ort zubereitet und bietet so ein unvergleichliches Kundenerlebnis.",
        },
        {
            icon: "/hafer.svg",
            title: "BARISTA QUALITÄT",
            text: "Mit Gastronom:innen entwickelt, punktet unser Haferdrink durch exzellenter Schaum-Qualität und Harmonie im Kaffee.",
        },
        {
            icon: "/zucker.svg",
            title: "TETRAPAK-FREI",
            text: "Mit The Oater Barista® lässt sich der umweltschädliche Abfall von Tetrapaks vermeiden – einfach vor Ort produzieren und in Mehrwegflaschen abfüllen.",
        },
        {
            icon: "/verpackungsarm.svg",
            title: "AUS DEUTSCHLAND:",
            text: "The Oater setzt auf Qualität und Regionalität – wir entwickeln und fertigen unsere Produkte in Deutschland und beziehen zu 100% Deutschen Hafer.",
        },
        {
            icon: "/pflanzlich.svg",
            title: "EINFACHE BEDIENUNG",
            text: "Unsere Maschine produziert automatisiert – von Dosierung bis Reinigung. Gepaart mit intuitiver Bedienung fügt sie sich so nahtlos in schnelllebige Arbeitsabläufe ein.",
        },
    ]}
/>
    <IconbarHome
        bgcolor="bg-oat-superlight"
        title="Haferdrink Ohne Kompromisse"
        icontitle1="Frisch + Lokal"
        imgUrl1="/frischlokal.svg"
        icontitle2="Barista-Qualität"
        imgUrl2="/coffee.svg"
        icontitle3="Verpackungsarm"
        imgUrl3="/verpackungsarm.svg"
        icontitle4="Preiswert"
        imgUrl4="/preiswert.svg"
        icontitle5="Ohne Zuckerzusatz"
        imgUrl5="/zucker.svg"
    >
        <Secondary slot="button" buttonName="Unser Produkt" buttonUrl="/de/produkt" />
    </IconbarHome>

    <ImgText title="Das OATeam" imgUrl="/founders.webp" reverse>
        Wir sind ein Team von Träumern und Haferdrink- Enthusiasten aus Köln, die fest daran glauben, dass bei Haferdrink noch Luft nach
