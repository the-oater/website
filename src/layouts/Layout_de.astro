                },
                {
                    href: "/sustainability",
                    name: "Sustainability",
                },
                {
                    href: "/career",
                    name: "Career",
                },
                {
                    href: "https://magazin.oater.de/de",
                    name: "Magazine",
                },
            ]}
            secondcoltitle="Kontakt"
            secondcolData={[
                {
                    href: "mailto:hello@oater.de",
                    name: "E-Mail",
                },
                {
                    href: "https://www.instagram.com/the_oater/",
