---
export interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/base.css";
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar.astro";
import Dropdown from "../components/navdropdown.astro";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <script defer data-domain="oater.de" src="https://plausible.io/js/script.js"></script>
    </head>
    <body class="scroll-smooth bg-white">
        <Navbar
            navitem1="Lösung"
            navitem2="Maschinen"
            navitem3="Über Uns"
            navitem4="Nachhaltigkeit"
            navitem5="Magazin"
            href1="/de/solution"
            href2="/de/machines"
            href3="/de/about"
            href4="/de/sustainability"
            href5="https://magazin.oater.de/de"
            hrefLogo="/de"
            language1="Deutsch"
            language2="English"
            hreflanguage2="/"
            hreflanguage1="/de"
            languagePicker="DE"
        >
            <Dropdown
                slot="dropdown1"
                dropdownData={[
                    {
                        link: "/de/solution#machine",
                        title: "Our Solution",
                        body: "Learn how our machine and subscription work",
                    },
                    {
                        link: "/de/solution#ingredientmix",
                        title: "Our Ingredient Mix",
                        body: "Read what our oat drink is made of",
                    },
                    {
                        link: "/de/solution#businesses",
                        title: "For Businesses",
                        body: "Bring The Oater to your business",
                    },
                ]}
            />
            <Dropdown
                slot="dropdown2"
                dropdownData={[
                    {
                        link: "/de/machines#oaterbarista",
                        title: "Features",
                        body: "Understand how the The Oater Barista works",
