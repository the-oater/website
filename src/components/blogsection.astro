---
export interface Props {
    headline: string;
    blogData: Array;
}

const { headline, blogData } = Astro.props;
---

<div class="mx-auto max-w-7xl py-14 px-10">
    <div class="pb-20 text-center">
        <h2 class="underline-4xl text-4xl font-bold">
            {headline}
        </h2>
    </div>
    <div class="grid grid-cols-1 place-items-center gap-12 md:grid-cols-2 lg:grid-cols-3">
        {
            blogData.map((article) => (
                <div class="mx-auto max-w-sm basis-1/3 overflow-hidden rounded-md shadow-lg transition-all ease-in-out hover:shadow-2xl">
                    <a href={article.href}>
                        <img class="h-56 object-cover" src={article.imgUrl} />
                        <div class="flex h-48 flex-col justify-between px-8 py-6">
                            <div class="">
                                <div class="mb-3 font-bold uppercase text-oat">{article.tag}</div>
                                <p class="text-base leading-loose text-raisin">{article.title}</p>
                            </div>
                            <p class="text-xs uppercase leading-loose text-sonic">
                                <span class="pr-14">{article.author}</span>
                                {article.date}
                            </p>
                        </div>
                    </a>
                </div>
            ))
        }
    </div>
    <div class="mt-20 text-center">
        <slot name="button" />
    </div>
</div>
