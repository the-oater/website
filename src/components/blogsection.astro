---
export interface Props {
	headline: string;
}

const { headline } = Astro.props;
---

<div class="mx-auto max-w-7xl py-14 px-10">
	<div class="pb-20 text-center">
		<h2 class="underline-4xl text-4xl font-bold">
			{headline}
		</h2>
	</div>
	<div class="flex flex-col justify-center gap-12 lg:flex-row">
		<div class="mx-auto max-w-sm basis-1/3 overflow-hidden rounded-md shadow-lg transition-all ease-in-out hover:shadow-xl">
			<a href="https://magazin.oater.de/de/2022/10/19/mehr-nachhaltigkeit-im-cafe">
				<img class="h-56 object-cover" src="/sowirddeincafenachhaltiger.webp" />
				<div class="flex h-48 flex-col justify-between px-8 py-6">
					<div class="">
						<div class="mb-3 font-bold uppercase text-oat">SUSTAINABLE BUSINESS</div>
						<p class="text-base leading-loose text-raisin">So wird Dein Café nachhaltiger</p>
					</div>
					<p class="text-xs uppercase leading-loose text-sonic"><span class="pr-14">Sebastian</span>Okt. 19, 2022</p>
				</div>
			</a>
		</div>
		<div class="mx-auto max-w-sm basis-1/3 overflow-hidden rounded-md shadow-lg transition-all ease-in-out hover:shadow-xl">
			<a href="https://magazin.oater.de/de/2022/07/07/das-ultimative-vegane-macaroni-and-cheese-rezept">
				<img class="h-56 object-cover" src="/macaroni.webp" />
				<div class="flex h-48 flex-col justify-between px-8 py-6">
					<div class="">
						<div class="mb-3 font-bold uppercase text-oat">REZEPT HUB</div>
						<p class="text-base leading-loose text-raisin">DAS vegane Macaroni and Cheese Rezept</p>
					</div>
					<p class="text-xs uppercase leading-loose text-sonic"><span class="pr-14">Lisa</span> Jul. 7, 2022</p>
				</div>
			</a>
		</div>
		<div class="mx-auto max-w-sm basis-1/3 overflow-hidden rounded-md shadow-lg transition-all ease-in-out hover:shadow-xl">
			<a href="https://magazin.oater.de/de/2022/08/02/tipps-gegen-lebensmittelverschwendung">
				<img class="h-56 object-cover" src="/retteretich.webp" />
				<div class="flex h-48 flex-col justify-between px-8 py-6">
					<div class="">
						<div class="mb-3 font-bold uppercase text-oat">ECO-FRIENDLY LIVING</div>
						<p class="text-base leading-loose text-raisin">5 Tipps für weniger Lebensmittelverschwendung</p>
					</div>
					<p class="text-xs uppercase leading-loose text-sonic"><span class="pr-14">Katharina</span> Aug. 2, 2022</p>
				</div>
			</a>
		</div>
	</div>
	<div class="mt-20 text-center">
		<slot name="button" />
	</div>
</div>
