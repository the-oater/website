---
export interface Props {
	headline?: string;
}

const { headline } = Astro.props;
---

<div class="mx-auto max-w-7xl px-10 pt-14">
	<div class="pb-10 text-center">
		<h2 class="underline-4xl text-4xl font-bold text-raisin">
			{headline}
		</h2>
	</div>
	<div class="flex flex-col items-center justify-center gap-8 lg:flex-row">
		<div class="max-w-md basis-1/2 md:max-w-lg">
			<img src="/Newsletter.jpg" alt="" />
		</div>
		<div class="max-w-md basis-1/2">
			<p class="py-8 text-base leading-loose text-raisin">
				<slot />
			</p>
			<script charset="utf-8" type="text/javascript" src="//js-eu1.hsforms.net/forms/embed/v2.js"></script>
			<script>
				hbspt.forms.create({
					region: "eu1",
					portalId: "26294092",
					formId: "02ae400f-e8bc-45b8-b170-bf796fd913e0",
				});
			</script>
		</div>
	</div>
</div>
