---
export interface Props {
  headline: string;
  subtitle: string;
  id?: string;
}

const { headline, subtitle, id } = Astro.props;
---

<div class="container mx-auto max-w-3xl px-1 py-1 mr-2" id={id}> 
  <h1 class="lg:underline-5xl underline-4xl text-4xl font-bold leading-snug lg:text-4xl">{headline}</h1><br>
  <br>
  <h2 class="max-w-7xl text-1xl font-bold leading-snug">{subtitle}</h2><br>
</div>