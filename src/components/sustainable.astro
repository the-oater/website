---
export interface Props {
    heading?: string;
    subtitle?: string;
    susData: Array;
    id?: string;
    background?: string;
}

const { heading, subtitle, susData, id, background } = Astro.props;
---

<div class={background} id={id}>
    <div class="container mx-auto max-w-7xl py-14 px-20 text-raisin sm:px-36 md:px-48 lg:px-10">
        <div class="text-center">
            <h2 class="underline-4xl text-4xl font-bold">
                {heading}
            </h2>
            <h3 class="mt-6 text-lg font-bold">
                {subtitle}
            </h3>
        </div>
        <div class="flex flex-col justify-center gap-14 lg:flex-row">
            {
                susData.map((sustainable) => (
                    <div class="basis-1/3 text-center">
                        <img class="mx-auto h-48 w-48 fill-raisin" src={sustainable.iconUrl} />
                        <h3 class="mt-4 text-lg font-medium tracking-tight">{sustainable.title}</h3>
                        <p class="mt-5 text-base leading-relaxed">{sustainable.text}</p>
                    </div>
                ))
            }
        </div>
        <div class="pt-8 text-center">
            <slot name="button" />
        </div>
    </div>
</div>
