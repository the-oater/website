---
export interface Props {
  heading?: string;
  subtitle?: string;
  heading1: string;
  text1: string;
  imgUrl1: string;
  heading2: string;
  text2: string;
  imgUrl2: string;
  heading3: string;
  text3: string;
  imgUrl3: string;
  id?: string;
  background?: string;
}

const {
  heading,
  subtitle,
  heading1,
  heading2,
  heading3,
  text1,
  text2,
  text3,
  id,
  background,
  imgUrl1,
  imgUrl2,
  imgUrl3,
} = Astro.props;
---

<div class={background} id={id}>
  <div class="container mx-auto max-w-7xl py-14 px-20 text-raisin sm:px-36 md:px-48 lg:px-10">
    <div class="text-center">
      <h1 class="underline-4xl text-4xl font-bold">
        {heading}
      </h1>
      <h2 class="mt-6 text-lg font-bold">
        {subtitle}
      </h2>
    </div>
    <div class="flex flex-col justify-center gap-14 lg:flex-row">
      <div class="basis-1/3 text-center">
        <img class="mx-auto h-48 w-48 fill-raisin" src={imgUrl1} alt="" />
        <h3 class="mt-4 text-lg font-medium tracking-tight">
          {heading1}
        </h3>
        <p class="mt-5 text-base leading-relaxed">
          {text1}
        </p>
      </div>
      <div class="basis-1/3 text-center">
        <img class="mx-auto h-48 w-48 fill-raisin" src={imgUrl2} alt="" />
        <h3 class="mt-4 text-lg font-medium tracking-tight">
          {heading2}
        </h3>
        <p class="mt-5 text-base leading-relaxed">
          {text2}
        </p>
      </div>
      <div class="basis-1/3 text-center">
        <img class="mx-auto h-48 w-48 fill-raisin" src={imgUrl3} alt="" />
        <h3 class="mt-4 text-lg font-medium tracking-tight">
          {heading3}
        </h3>
        <p class="mt-5 text-base leading-relaxed">
          {text3}
        </p>
      </div>
    </div>
    <div class="text-center">
      <slot name="button" />
    </div>
  </div>
</div>
